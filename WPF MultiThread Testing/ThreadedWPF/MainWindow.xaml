<Window x:Class="ThreadedWPF.MainWindow"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThreadedWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="100" Width="200">
    <xctk:BusyIndicator x:Name="_busyIndicator">
        <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        
        <Button x:Name="Run" Grid.Row="0" Grid.Column="0" Content="Run" Click="Run_Click"/>
        <Button x:Name="Add" Grid.Row="0" Grid.Column="1" Content="Add 5" Click="Add_Click"/>

    </Grid>
    </xctk:BusyIndicator>

</Window>
